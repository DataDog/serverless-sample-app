terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 6.0"
    }
  }
  backend "s3" {}
}

provider "aws" {
  region = var.region

  default_tags {
    tags = {
      DD_PRESERVE_STACK = "true"
      MANAGED_BY        = "Terraform"
    }
  }
}
